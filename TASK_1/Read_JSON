import json

def read_json_file(file_path):                    # takes a single argument file path, to read json file
    try:
        with open(file_path, 'r') as file:
            json_data = json.load(file)           # function to parse the JSON data from opened file & store json data var
            return json_data
    except FileNotFoundError:
        return None
#C:\Users\Administrator\OneDrive - Wipro\Fujitsu\TASK_1\JSON_Data.json    
input_file = input("enter the path: ")
json_content = read_json_file(input_file)

if json_content is not None:
    print("JSON Content: ")
    print(json_content)
else:
    print("File not found")
